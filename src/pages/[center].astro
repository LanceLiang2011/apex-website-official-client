---
import CenterPage from '../components/pages/CenterPage.astro';
import { centers } from '../data/centers';

export function getStaticPaths() {
  return centers
    .filter(center => center.slug !== 'rise' && center.slug !== 'simple-language' && center.slug !== 'ucan')
    .map(center => ({
      params: { center: center.slug },
      props: { center }
    }));
}

const { center } = Astro.props;
---

<CenterPage center={center} locale="zh" />
