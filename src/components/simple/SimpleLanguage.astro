---

<BaseLayout title={`${center.name[locale]} - Apex Education`}>
  <!-- Hero Section -->
  <section class="bg-gray-900 text-white pt-32 pb-16">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row gap-8 items-start">
        <div class="grow">
          <div class="flex gap-2 mb-4">
            <a href={getRelativeLocaleUrl(locale, '/')} class="text-blue-300 hover:text-white transition-colors">
              {locale === 'zh' ? '首页' : 'Home'}
            </a>
            <span class="text-gray-500">/</span>
            <span class="text-gray-400">{center.name[locale]}</span>
          </div>
          <h1 class="text-3xl md:text-4xl font-bold mb-4">{center.name[locale]}</h1>
          <p class="text-xl text-gray-300 mb-6 max-w-3xl">{center.description[locale]}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content Section -->
  <section class="py-16 bg-gray-50 min-h-[600px]">
    <div class="container mx-auto px-4">
      
      <!-- Top Tabs (Categories) -->
      <div class="flex flex-wrap gap-2 mb-8 border-b border-gray-200 pb-1">
        {categories.map((cat, index) => (
          <button
            class={`px-6 py-3 rounded-t-lg font-bold text-sm md:text-base transition-all duration-200 flex items-center gap-2 ${
              index === 0 
                ? 'bg-white text-primary-blue border-t border-x border-gray-200 shadow-sm -mb-px' 
                : 'bg-gray-100 text-gray-500 hover:bg-gray-200 hover:text-gray-700'
            }`}
            data-cat-tab={cat.id}
            onclick={`
              document.querySelectorAll('[data-cat-tab]').forEach(b => {
                b.classList.remove('bg-white', 'text-primary-blue', 'border-t', 'border-x', 'border-gray-200', 'shadow-sm', '-mb-px');
                b.classList.add('bg-gray-100', 'text-gray-500');
              });
              this.classList.remove('bg-gray-100', 'text-gray-500');
              this.classList.add('bg-white', 'text-primary-blue', 'border-t', 'border-x', 'border-gray-200', 'shadow-sm', '-mb-px');
              
              document.querySelectorAll('.category-content').forEach(c => c.classList.add('hidden'));
              document.getElementById('cat-content-' + this.dataset.catTab).classList.remove('hidden');
            `}
          >
            <cat.icon class="w-4 h-4" />
            {cat.name[locale]}
          </button>
        ))}
      </div>

      <!-- Category Contents -->
      {categories.map((cat, catIndex) => (
        <div id={`cat-content-${cat.id}`} class={`category-content ${catIndex === 0 ? '' : 'hidden'} animate-fadeIn`}>
          <div class="flex flex-col lg:flex-row gap-8">
            
            <!-- Left Sidebar: Vertical Tabs for Courses -->
            <div class="w-full lg:w-1/4 shrink-0">
              <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden sticky top-24">
                <div class="p-4 bg-gray-50 border-b border-gray-100">
                  <h3 class="font-bold text-gray-900">{locale === 'zh' ? '课程列表' : 'Course List'}</h3>
                </div>
                <div class="flex flex-col">
                  {cat.courses.map((item, index) => (
                    <button
                      class={`text-left px-6 py-4 border-b border-gray-100 last:border-0 hover:bg-blue-50 transition-colors duration-200 focus:outline-none flex items-center gap-3 group ${
                        index === 0 ? 'active bg-blue-50' : ''
                      }`}
                      data-course-tab={`${cat.id}-${item.id}`}
                      onclick={`
                        const container = document.getElementById('cat-content-${cat.id}');
                        container.querySelectorAll('[data-course-tab]').forEach(b => {
                          b.classList.remove('active', 'bg-blue-50');
                          b.querySelector('.icon-box').classList.remove('bg-primary-blue', 'text-white');
                          b.querySelector('.icon-box').classList.add('bg-gray-100', 'text-gray-500');
                        });
                        this.classList.add('active', 'bg-blue-50');
                        this.querySelector('.icon-box').classList.remove('bg-gray-100', 'text-gray-500');
                        this.querySelector('.icon-box').classList.add('bg-primary-blue', 'text-white');
                        
                        container.querySelectorAll('.course-content').forEach(c => c.classList.add('hidden'));
                        document.getElementById('course-content-${cat.id}-${item.id}').classList.remove('hidden');
                      `}
                    >
                      <div class={`icon-box w-8 h-8 rounded-lg flex items-center justify-center transition-colors ${index === 0 ? 'bg-primary-blue text-white' : 'bg-gray-100 text-gray-500 group-hover:bg-white group-hover:text-primary-blue'}`}>
                        <item.icon class="w-4 h-4" />
                      </div>
                      <span class="font-medium text-gray-700 group-[.active]:text-primary-blue transition-colors">
                        {item.name[locale]}
                      </span>
                    </button>
                  ))}
                </div>
              </div>
            </div>

            <!-- Right Content: Course Details -->
            <div class="w-full lg:w-3/4">
              {cat.courses.map((item, index) => (
                <div id={`course-content-${cat.id}-${item.id}`} class={`course-content ${index === 0 ? '' : 'hidden'} animate-fadeIn`}>
                  <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
                    <div class="p-8 border-b border-gray-100 bg-linear-to-r from-gray-50 to-white">
                      <div class="flex items-center gap-4 mb-2">
                        <div class="w-12 h-12 bg-primary-blue text-white rounded-xl flex items-center justify-center shadow-lg shadow-blue-200">
                          <item.icon class="w-6 h-6" />
                        </div>
                        <div>
                          <h2 class="text-2xl font-bold text-gray-900">{item.name[locale]}</h2>
                          <p class="text-gray-500 text-sm">{cat.name[locale]}</p>
                        </div>
                      </div>
                    </div>
                    
                    <div class="p-8">
                      {item.placeholder ? (
                        <div class="text-center py-12">
                          <div class="w-16 h-16 bg-gray-100 text-gray-400 rounded-full flex items-center justify-center mx-auto mb-4">
                            <Calendar class="w-8 h-8" />
                          </div>
                          <h3 class="text-xl font-bold text-gray-900 mb-2">
                            {locale === 'zh' ? '内容更新中' : 'Content Coming Soon'}
                          </h3>
                          <p class="text-gray-500">
                            {locale === 'zh' ? '该课程的详细介绍即将上线，敬请期待。' : 'Detailed introduction for this course will be available soon.'}
                          </p>
                        </div>
                      ) : item.subTabs ? (
