---
import BaseLayout from '../../layouts/BaseLayout.astro';
import type { Locale } from '../../data/types';
import { posts } from '../../data/posts';
import { getRelativeLocaleUrl } from 'astro:i18n';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;

const title = locale === 'zh' ? '教育信息 - Apex Education' : 'Education Info - Apex Education';
---

<BaseLayout title={title}>
  <!-- Hero -->
  <section class="bg-gray-900 text-white pb-16 pt-24">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-3xl md:text-4xl font-bold mb-4">{locale === 'zh' ? '教育信息' : 'Education Info'}</h1>
      <p class="text-gray-300">
        {locale === 'zh' ? '最新的教育资讯与备考干货' : 'Latest Education News and Preparation Tips'}
      </p>
    </div>
  </section>

  <section class="py-16 bg-bg-light">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row gap-12">
        <!-- Main Content: Post List -->
        <div class="w-full lg:w-2/3 space-y-8">
          {posts.map(post => (
            <article class="bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300 overflow-hidden flex flex-col md:flex-row">
              <div class="md:w-1/3 h-48 md:h-auto relative">
                <img src={post.image} alt={post.title[locale]} class="w-full h-full object-cover absolute inset-0" />
              </div>
              <div class="p-6 md:w-2/3 flex flex-col">
                <div class="flex items-center text-sm text-gray-500 mb-3 gap-4">
                  <span class="text-primary-blue font-medium">{post.category[locale]}</span>
                  <span>{post.date}</span>
                </div>
                <h2 class="text-xl font-bold text-text-main mb-3 hover:text-primary-blue transition-colors">
                  <a href={getRelativeLocaleUrl(locale, `education-info/${post.slug}`)}>
                    {post.title[locale]}
                  </a>
                </h2>
                <p class="text-gray-600 mb-4 line-clamp-2 flex-grow">
                  {post.excerpt[locale]}
                </p>
                <a 
                  href={getRelativeLocaleUrl(locale, `education-info/${post.slug}`)} 
                  class="text-primary-blue font-medium hover:underline inline-flex items-center"
                >
                  {locale === 'zh' ? '阅读全文' : 'Read More'}
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                </a>
              </div>
            </article>
          ))}
        </div>

        <!-- Sidebar -->
        <div class="w-full lg:w-1/3 space-y-8">
          <!-- Search -->
          <div class="bg-white p-6 rounded-xl shadow-sm">
            <h3 class="font-bold text-lg mb-4">{locale === 'zh' ? '搜索' : 'Search'}</h3>
            <div class="relative">
              <input 
                type="text" 
                placeholder={locale === 'zh' ? '搜索文章...' : 'Search posts...'} 
                class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-2 focus:outline-none focus:border-primary-blue transition-colors"
              />
              <button class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-primary-blue">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
              </button>
            </div>
          </div>

          <!-- Categories -->
          <div class="bg-white p-6 rounded-xl shadow-sm">
            <h3 class="font-bold text-lg mb-4">{locale === 'zh' ? '分类' : 'Categories'}</h3>
            <ul class="space-y-2">
              {[
                { zh: '学术辅导', en: 'Academic Tutoring', count: 12 },
                { zh: '语言培训', en: 'Language Training', count: 8 },
                { zh: '升学指导', en: 'Admission Guidance', count: 15 },
                { zh: '教育动态', en: 'Education News', count: 5 }
              ].map(cat => (
                <li>
                  <a href="#" class="flex justify-between items-center text-gray-600 hover:text-primary-blue group">
                    <span>{locale === 'zh' ? cat.zh : cat.en}</span>
                    <span class="bg-gray-100 text-gray-400 text-xs px-2 py-1 rounded-full group-hover:bg-blue-50 group-hover:text-primary-blue transition-colors">{cat.count}</span>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Recent Posts -->
          <div class="bg-white p-6 rounded-xl shadow-sm">
            <h3 class="font-bold text-lg mb-4">{locale === 'zh' ? '最新文章' : 'Recent Posts'}</h3>
            <ul class="space-y-4">
              {posts.slice(0, 3).map(post => (
                <li class="flex gap-4 group cursor-pointer">
                  <div class="w-16 h-16 flex-shrink-0 rounded-lg overflow-hidden">
                    <img src={post.image} alt={post.title[locale]} class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" />
                  </div>
                  <div>
                    <h4 class="text-sm font-medium text-text-main group-hover:text-primary-blue line-clamp-2 leading-snug mb-1">
                      <a href={getRelativeLocaleUrl(locale, `education-info/${post.slug}`)}>{post.title[locale]}</a>
                    </h4>
                    <span class="text-xs text-gray-400">{post.date}</span>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
