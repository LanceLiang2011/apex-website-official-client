---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../home/Hero.astro';
import AboutSection from '../home/AboutSection.astro';
import CentersSection from '../home/CentersSection.astro';
import TutorsSection from '../home/TutorsSection.astro';
import WhyChooseUsSection from '../home/WhyChooseUsSection.astro';
import HomeBlogSection from '../home/HomeBlogSection.astro';
import type { Locale } from '../../data/types';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;

const title = locale === 'zh' ? 'Apex Education - 首页' : 'Apex Education - Home';
---

<BaseLayout title={title}>
  <Hero locale={locale} />
  <AboutSection locale={locale} />
  
  <WhyChooseUsSection locale={locale} />

  <CentersSection locale={locale} />
  <TutorsSection locale={locale} />
  <HomeBlogSection locale={locale} />
</BaseLayout>
