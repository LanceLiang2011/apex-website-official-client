---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../home/Hero.astro';
import AboutSection from '../home/AboutSection.astro';
import CentersSection from '../home/CentersSection.astro';
import TutorsSection from '../home/TutorsSection.astro';
import HomeBlogSection from '../home/HomeBlogSection.astro';
import type { Locale } from '../../data/types';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;

const title = locale === 'zh' ? 'Apex Education - 首页' : 'Apex Education - Home';
---

<BaseLayout title={title}>
  <Hero locale={locale} />
  <AboutSection locale={locale} />
  
  <!-- Video Section Placeholder -->
  <section class="py-20 bg-gray-900 text-white">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <div class="w-full md:w-1/2 order-2 md:order-1">
          <h2 class="text-3xl font-bold mb-6">{locale === 'zh' ? '为什么选择我们？' : 'Why Choose Us?'}</h2>
          <ul class="space-y-4">
            {[
              locale === 'zh' ? '专业的师资团队' : 'Professional Teaching Team',
              locale === 'zh' ? '个性化的教学方案' : 'Personalized Teaching Plan',
              locale === 'zh' ? '卓越的升学成果' : 'Excellent Admission Results',
              locale === 'zh' ? '全方位的服务体系' : 'Comprehensive Service System'
            ].map(item => (
              <li class="flex items-center gap-3">
                <svg class="w-6 h-6 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                <span class="text-lg">{item}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="w-full md:w-1/2 order-1 md:order-2">
          <div class="relative rounded-xl overflow-hidden shadow-2xl aspect-video bg-gray-800 group cursor-pointer">
            <!-- Placeholder Video Cover -->
            <img src="https://images.unsplash.com/photo-1516321318423-f06f85e504b3?q=80&w=2070&auto=format&fit=crop" alt="Video Cover" class="w-full h-full object-cover opacity-80 group-hover:opacity-60 transition-opacity" />
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CentersSection locale={locale} />
  <TutorsSection locale={locale} />
  <HomeBlogSection locale={locale} />
</BaseLayout>
