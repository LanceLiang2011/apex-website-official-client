---
import { getRelativeLocaleUrl } from 'astro:i18n';
import type { Locale } from '../data/types';
import { content as siteContent } from '../data/content';

const currentLocale = (Astro.currentLocale || 'zh') as Locale;

const footerContent = siteContent.footer;
---

<footer class="bg-gray-900 text-white pt-16 pb-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
      <!-- Column 1: Brand & Intro -->
      <div>
        <div class="text-2xl font-bold mb-6">
          <img 
            src="/images/logo_light.png" 
            alt="Apex Education" 
            class="h-24 w-auto"
          />
        </div>
        <p class="text-gray-400 leading-relaxed text-sm">
          {footerContent.brandDescription[currentLocale]}
        </p>
      </div>

      <!-- Column 2: Address & Map -->
      <div class="space-y-6">
        <h3 class="text-lg font-semibold text-white flex items-center gap-2">
          <svg class="w-5 h-5 text-accent-red" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
          {footerContent.addressHeading[currentLocale]}
        </h3>
        
        <div class="text-gray-400 text-sm">
          {siteContent.contact.address[currentLocale]}
        </div>

        <!-- Google Map Embed - Markham -->
        <div class="w-full h-48 rounded-lg overflow-hidden shadow-lg border border-gray-800">
          <iframe 
            src="https://maps.google.com/maps?q=7181%20Woodbine%20Ave,%20Markham,%20ON%20L3R%201A3&t=&z=15&ie=UTF8&iwloc=&output=embed" 
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy"
          ></iframe>
        </div>
      </div>

      <!-- Column 3: Opening Hours & Contact -->
      <div class="space-y-6">
         <!-- Opening Hours -->
         <div>
            <h3 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-accent-red" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
              {footerContent.hoursHeading[currentLocale]}
            </h3>
            <div class="bg-gray-800/50 rounded-lg p-5 backdrop-blur-sm border border-gray-700/50">
              <div class="flex items-center justify-between py-2 border-b border-gray-700/50">
                <span class="text-gray-400 text-sm">{siteContent.contact.openingHours.weekday.days[currentLocale]}</span>
                <span class="text-white font-medium text-sm">{siteContent.contact.openingHours.weekday.time[currentLocale]}</span>
              </div>
              <div class="flex items-center justify-between py-2">
                <span class="text-gray-400 text-sm">{siteContent.contact.openingHours.weekend.days[currentLocale]}</span>
                <span class="text-white font-medium text-sm">{siteContent.contact.openingHours.weekend.time[currentLocale]}</span>
              </div>
              <div class="mt-3 text-xs text-gray-500">
                {currentLocale === 'zh' ? '法定节假日可能有所调整，请提前致电咨询。' : 'Hours may vary on holidays. Please call to confirm.'}
              </div>
            </div>
         </div>

         <!-- Contact Details -->
         <div>
            <h3 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-accent-red" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
              {siteContent.common.navigation.contact[currentLocale]}
            </h3>
            <ul class="space-y-3 text-sm">
              <li class="flex items-center gap-3 text-gray-400 hover:text-white transition-colors">
                <span class="w-8 h-8 rounded-full bg-gray-800 flex items-center justify-center shrink-0">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                </span>
                <span>{siteContent.contact.phone}</span>
              </li>
              <li class="flex items-center gap-3 text-gray-400 hover:text-white transition-colors">
                <span class="w-8 h-8 rounded-full bg-gray-800 flex items-center justify-center shrink-0">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                </span>
                <span>{siteContent.contact.email}</span>
              </li>
            </ul>
         </div>
      </div>
    </div>

    <div class="border-t border-gray-800 pt-8 text-center text-gray-500 text-sm">
      <p>&copy; {new Date().getFullYear()} Apex Education. All rights reserved.</p>
    </div>
  </div>
</footer>
