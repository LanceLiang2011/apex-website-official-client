---
import { getRelativeLocaleUrl } from 'astro:i18n';
import type { Locale } from '../data/types';
import { content as siteContent } from '../data/content';

const currentLocale = (Astro.currentLocale || 'zh') as Locale;

const footerContent = siteContent.footer;
---

<footer class="bg-gray-900 text-white pt-16 pb-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
      <!-- Column 1: Brand & Intro -->
      <div>
        <div class="text-2xl font-bold mb-6 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary-blue" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2L1 12h3v9h6v-6h4v6h6v-9h3L12 2z"/>
          </svg>
          <span>Apex Education</span>
        </div>
        <p class="text-gray-400 mb-6 leading-relaxed">
          {footerContent.brandDescription[currentLocale]}
        </p>
        <div class="flex gap-4">
          <!-- Social Icons Placeholders -->
          <a href="#" class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center hover:bg-accent-red transition-colors">
            <span class="sr-only">WeChat</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M8.5,13.5A1.5,1.5 0 1,1 10,15A1.5,1.5 0 0,1 8.5,13.5M14.5,13.5A1.5,1.5 0 1,1 16,15A1.5,1.5 0 0,1 14.5,13.5M12,2C6.48,2 2,5.58 2,10C2,12.63 3.39,14.96 5.56,16.33C5.27,17.33 4.5,18.83 4,19.5C4,19.5 7.5,19 9.5,17.5C10.3,17.83 11.14,18 12,18C17.52,18 22,14.42 22,10C22,5.58 17.52,2 12,2Z"/></svg>
          </a>
        </div>
      </div>

      <!-- Column 2: Quick Links -->
      <div class="grid grid-cols-2 gap-4">
        <div>
          <h3 class="text-lg font-bold mb-6 border-b-2 border-accent-red inline-block pb-1">
            {footerContent.quickLinks.heading[currentLocale]}
          </h3>
          <ul class="space-y-3">
            {footerContent.quickLinks.items.map(link => (
              <li>
                <a href={getRelativeLocaleUrl(currentLocale, link.href)} class="text-gray-400 hover:text-white transition-colors">
                  {link.label[currentLocale]}
                </a>
              </li>
            ))}
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-bold mb-6 border-b-2 border-accent-red inline-block pb-1">
            {footerContent.centersLinks.heading[currentLocale]}
          </h3>
          <ul class="space-y-3">
            {footerContent.centersLinks.items.map(center => (
              <li>
                <a href={getRelativeLocaleUrl(currentLocale, center.href)} class="text-gray-400 hover:text-white transition-colors">
                  {center.label[currentLocale]}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Column 3: Newsletter -->
      <div>
        <h3 class="text-lg font-bold mb-6 border-b-2 border-accent-red inline-block pb-1">
          {footerContent.newsletter.heading[currentLocale]}
        </h3>
        <p class="text-gray-400 mb-4">
          {footerContent.newsletter.description[currentLocale]}
        </p>
        <form class="flex flex-col gap-3">
          <input 
            type="email" 
            placeholder={footerContent.newsletter.emailPlaceholder[currentLocale]} 
            class="bg-gray-800 border border-gray-700 text-white px-4 py-3 rounded focus:outline-none focus:border-primary-blue transition-colors"
          />
          <button type="submit" class="bg-accent-red hover:bg-red-700 text-white font-medium px-6 py-3 rounded transition-colors">
            {footerContent.newsletter.subscribeButton[currentLocale]}
          </button>
        </form>
      </div>
    </div>

    <div class="border-t border-gray-800 pt-8 text-center text-gray-500 text-sm">
      <p>&copy; {new Date().getFullYear()} Apex Education. All rights reserved.</p>
    </div>
  </div>
</footer>
