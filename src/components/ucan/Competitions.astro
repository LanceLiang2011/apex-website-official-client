                        </div>
                        <div>
                          <h2 class="text-2xl font-bold text-gray-900">{item.name[locale]}</h2>
                          <p class="text-gray-500 text-sm">{cat.name[locale]}</p>
                        </div>
                      </div>
                    </div>
                    
                    <div class="p-8">
                      <div class="overflow-x-auto">
                        <table class="w-full text-left border-collapse">
                          <thead>
                            <tr>
                              <th class="py-4 px-4 bg-gray-50 font-bold text-gray-900 border-b border-gray-200 w-2/3 rounded-tl-lg">
                                {locale === 'zh' ? '课题' : 'Topic'}
                              </th>
                              <th class="py-4 px-4 bg-gray-50 font-bold text-gray-900 border-b border-gray-200 w-1/3 rounded-tr-lg text-right">
                                {locale === 'zh' ? '课时' : 'Hours'}
                              </th>
                            </tr>
                          </thead>
                          <tbody class="divide-y divide-gray-100">
                            {item.syllabus.map((topic, i) => (
                              <tr class="hover:bg-gray-50 transition-colors group">
                                <td class="py-4 px-4 align-top">
                                  <div class="flex items-center gap-3">
                                    <span class="shrink-0 w-6 h-6 bg-blue-50 text-primary-blue rounded-full flex items-center justify-center text-xs font-bold group-hover:bg-primary-blue group-hover:text-white transition-colors">
                                      {i + 1}
                                    </span>
                                    <span class="font-bold text-gray-800">{topic.title[locale]}</span>
                                  </div>
                                </td>
                                <td class="py-4 px-4 text-right text-gray-600 font-mono">
                                  {topic.hours}{locale === 'zh' ? '课时' : ' Hrs'}
                                </td>
                              </tr>
                            ))}
                          </tbody>
                        </table>
                      </div>
                    </div>
