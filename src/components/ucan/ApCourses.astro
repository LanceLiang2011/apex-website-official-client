  Sigma, 
  Atom, 
  Zap, 
  FlaskConical, 
  Dna, 
  BarChart3, 
  Code2, 
  Globe2, 
  Coins, 
  PenTool, 
  BookOpen 
} from 'lucide-astro';

interface SyllabusTopic {
  title: { zh: string; en: string; };
  hours: number;
  sub?: { zh: string; en: string; }[];
}

interface CourseData {
  id: string;
  name: { zh: string; en: string; };
  icon: any;
  syllabus: {
    title: { zh: string; en: string; };
    hours?: number;
    topics: SyllabusTopic[];
  };
}

interface Props {
  course: Course;
  center: Center;
  locale: Locale;
}

const { course, center, locale } = Astro.props;

