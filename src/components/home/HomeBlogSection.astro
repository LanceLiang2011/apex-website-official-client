---
import type { Locale } from '../../data/types';
import { posts } from '../../data/posts';
import { getRelativeLocaleUrl } from 'astro:i18n';
import { content as siteContent } from '../../data/content';

interface Props {
  locale: Locale;
}
const { locale } = Astro.props;

const latestPosts = posts.slice(0, 3);
const blogContent = siteContent.home.blog;
const commonButtons = siteContent.common.buttons;
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-end mb-12">
      <div>
        <h2 class="text-3xl md:text-4xl font-bold text-text-main mb-4">
          {blogContent.heading[locale]}
        </h2>
        <p class="text-gray-600">
          {blogContent.subheading[locale]}
        </p>
      </div>
      <a 
        href={getRelativeLocaleUrl(locale, '/education-info')} 
        class="hidden md:inline-flex items-center text-primary-blue font-semibold hover:underline"
      >
        {blogContent.viewMoreText[locale]}
        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {latestPosts.map(post => (
        <article class="bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300 overflow-hidden flex flex-col group">
          <div class="h-48 overflow-hidden relative">
            <img 
              src={post.image} 
              alt={post.title[locale]} 
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
            />
            <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded text-xs font-bold text-text-main shadow-sm">
              {post.date}
            </div>
          </div>
          
          <div class="p-6 flex-grow flex flex-col">
            <div class="text-xs font-medium text-primary-blue mb-2 uppercase tracking-wider">
              {post.category[locale]}
            </div>
            <h3 class="text-xl font-bold text-text-main mb-3 line-clamp-2 group-hover:text-primary-blue transition-colors">
              <a href={getRelativeLocaleUrl(locale, `education-info/${post.slug}`)}>
                {post.title[locale]}
              </a>
            </h3>
            <p class="text-gray-600 text-sm mb-4 line-clamp-3 flex-grow">
              {post.excerpt[locale]}
            </p>
            <a 
              href={getRelativeLocaleUrl(locale, `education-info/${post.slug}`)} 
              class="text-primary-blue font-medium text-sm hover:underline mt-auto inline-block"
            >
              {commonButtons.readMore[locale]}
            </a>
          </div>
        </article>
      ))}
    </div>

    <div class="mt-8 text-center md:hidden">
      <a 
        href={getRelativeLocaleUrl(locale, '/education-info')} 
        class="inline-block border border-gray-300 text-gray-700 font-medium px-6 py-2 rounded-lg hover:bg-gray-50 transition-colors"
      >
        {blogContent.viewMoreText[locale]}
      </a>
    </div>
  </div>
</section>
