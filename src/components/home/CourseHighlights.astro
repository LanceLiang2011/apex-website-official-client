---
import type { Locale } from '../../data/types';
import { courses } from '../../data/courses';
import { centers } from '../../data/centers';
import { getRelativeLocaleUrl } from 'astro:i18n';

interface Props {
  locale: Locale;
}
const { locale } = Astro.props;

// Pick 3 random or specific courses
const featuredCourses = courses.slice(0, 3);

function getCenterName(centerId: string) {
  const center = centers.find(c => c.id === centerId);
  return center?.name[locale] || '';
}

function getCenterSlug(centerId: string) {
  const center = centers.find(c => c.id === centerId);
  return center?.slug || '';
}
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-text-main mb-4">
        {locale === 'zh' ? '热门课程' : 'Popular Courses'}
      </h2>
      <p class="text-gray-600">
        {locale === 'zh' ? '探索我们最受欢迎的课程' : 'Explore our most popular courses'}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {featuredCourses.map(course => (
        <div class="bg-white rounded-xl shadow-lg overflow-hidden group border border-gray-100">
          <div class="h-48 bg-gray-200 relative overflow-hidden">
            <!-- Placeholder Image -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent z-10"></div>
            <img 
              src={`https://images.unsplash.com/photo-1503676260728-1c00da094a0b?q=80&w=2022&auto=format&fit=crop`} 
              alt={course.name[locale]} 
              class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
            />
            <div class="absolute bottom-4 left-4 z-20">
              <span class="bg-primary-blue text-white text-xs px-2 py-1 rounded">
                {getCenterName(course.centerId)}
              </span>
            </div>
          </div>
          
          <div class="p-6">
            <h3 class="text-xl font-bold text-text-main mb-2 group-hover:text-primary-blue transition-colors">
              <a href={getRelativeLocaleUrl(locale, `${getCenterSlug(course.centerId)}/courses/${course.slug}`)}>
                {course.name[locale]}
              </a>
            </h3>
            <p class="text-gray-600 text-sm mb-4 line-clamp-2">
              {course.shortDescription[locale]}
            </p>
            
            <div class="flex items-center justify-between pt-4 border-t border-gray-100">
              <div class="flex items-center text-sm text-gray-500">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                {course.level?.[locale]}
              </div>
              <a 
                href={getRelativeLocaleUrl(locale, `${getCenterSlug(course.centerId)}/courses/${course.slug}`)} 
                class="text-primary-blue font-semibold text-sm hover:underline"
              >
                {locale === 'zh' ? '查看详情' : 'View Details'}
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a 
        href={getRelativeLocaleUrl(locale, '/ucan')} 
        class="inline-block border-2 border-primary-blue text-primary-blue font-semibold px-8 py-3 rounded-lg hover:bg-primary-blue hover:text-white transition-colors"
      >
        {locale === 'zh' ? '查看所有课程' : 'View All Courses'}
      </a>
    </div>
  </div>
</section>
