---
import content from '../../data/content';

const { locale } = Astro.props;
const data = content.home.whyChooseUs as any;

const icons = [
  // Faculty (Cap)
  `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path d="M22 10v6M2 10l10-5 10 5-10 5z"/>
    <path d="M6 12v5c3 0 6-1 6-1v-7"/>
    <path d="M18 17v-5"/>
  </svg>`,
  // Personalized (Clipboard/Pen)
  `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
  </svg>`,
  // Results (Trophy)
  `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
  </svg>`,
  // Support (Heart/Handshake - using Heart for simplicity)
  `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
  </svg>`
];
---

<section class="py-24 bg-gray-50 overflow-hidden">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      
      <!-- Left Column: Content & Features -->
      <div>
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-12 tracking-tight">
          {data.heading[locale]}
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-12">
          {data.features.map((feature: any, index: number) => (
            <div class="flex flex-col items-start group">
              <div class="w-16 h-16 bg-blue-50 rounded-2xl flex items-center justify-center text-primary-blue mb-6 group-hover:bg-accent-red group-hover:text-white group-hover:scale-110 transition-all duration-300 shadow-sm border border-blue-100">
                <Fragment set:html={icons[index]} />
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary-blue transition-colors">
                {feature.title[locale]}
              </h3>
              <p class="text-gray-500 leading-relaxed text-sm">
                {feature.description[locale]}
              </p>
            </div>
          ))}
        </div>
      </div>

      <!-- Right Column: Video -->
      <div class="relative">
        <!-- Decorative background element -->
        <div class="absolute -right-20 -top-20 w-96 h-96 bg-blue-50 rounded-full blur-3xl opacity-50 z-0"></div>
        <div class="absolute -left-20 -bottom-20 w-96 h-96 bg-red-50 rounded-full blur-3xl opacity-50 z-0"></div>
        
        <div class="relative z-10 rounded-3xl overflow-hidden shadow-2xl aspect-video bg-gray-900 border-4 border-white" id="video-container">
          <!-- Loading placeholder -->
          <div class="absolute inset-0 bg-gradient-to-br from-blue-900 to-purple-900 flex items-center justify-center" id="video-placeholder">
            <div class="text-center">
              <div class="w-16 h-16 border-4 border-white border-t-transparent rounded-full animate-spin mx-auto mb-4"></div>
              <p class="text-white text-sm font-medium">Loading video...</p>
            </div>
          </div>
          
          <!-- Video element -->
          <video 
            id="about-video"
            class="w-full h-full object-cover opacity-0 transition-opacity duration-500"
            muted
            loop
            playsinline
            preload="auto"
          >
            <source src="/videos/main.mp4" type="video/mp4" />
            Your browser does not support the video tag.
          </video>
          
          <div class="absolute bottom-6 left-6 right-6 z-20 transition-opacity duration-500" id="video-overlay">
             <p class="text-white text-sm font-medium uppercase tracking-wider mb-1 text-shadow">Watch Our Story</p>
             <h3 class="text-white text-2xl font-bold text-shadow-lg">Empowering Future Leaders</h3>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const video = document.getElementById('about-video') as HTMLVideoElement;
    const placeholder = document.getElementById('video-placeholder') as HTMLElement;
    const overlay = document.getElementById('video-overlay') as HTMLElement;
    
    if (!video || !placeholder) return;
    
    let hasPlayed = false;
    let videoLoaded = false;
    
    // Handle video loading success
    video.addEventListener('loadeddata', () => {
      videoLoaded = true;
      placeholder.style.opacity = '0';
      video.style.opacity = '0.7';
      setTimeout(() => {
        placeholder.style.display = 'none';
      }, 500);
    });
    
    // Handle video loading errors
    video.addEventListener('error', (e) => {
      console.error('Video loading error:', e);
      const placeholderContent = placeholder.querySelector('.text-center');
      if (placeholderContent) {
        placeholderContent.innerHTML = '<p class="text-white text-sm font-medium">Video unavailable</p>';
      }
    });
    
    // Timeout fallback if video doesn't load within 10 seconds
    setTimeout(() => {
      if (!videoLoaded && placeholder.style.display !== 'none') {
        console.warn('Video loading timeout');
        const placeholderContent = placeholder.querySelector('.text-center');
        if (placeholderContent) {
          placeholderContent.innerHTML = '<p class="text-white text-sm font-medium">Video loading delayed...</p>';
        }
      }
    }, 10000);
    
    // Hide overlay when video starts playing
    video.addEventListener('play', () => {
      if (overlay) {
        overlay.style.opacity = '0';
        setTimeout(() => {
          overlay.style.display = 'none';
        }, 500);
      }
    });
    
    // Intersection Observer to auto-play when in view
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting && !hasPlayed && videoLoaded) {
          video.play().catch(err => {
            console.log('Video autoplay failed:', err);
          });
          hasPlayed = true;
        }
      });
    }, {
      threshold: 0.5
    });
    
    observer.observe(video);
  });
</script>
