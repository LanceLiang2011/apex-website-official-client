---
import { navItems } from '../data/navigation';
import { getRelativeLocaleUrl } from 'astro:i18n';
import type { Locale } from '../data/types';

const currentLocale = (Astro.currentLocale || 'zh') as Locale;
const currentPath = Astro.url.pathname;

// Helper to get path without locale
let pathWithoutLocale = currentPath;
if (currentLocale === 'en' && currentPath.startsWith('/en')) {
  pathWithoutLocale = currentPath.replace(/^\/en/, '') || '/';
} else if (currentLocale === 'zh' && currentPath === '/') {
    pathWithoutLocale = '/';
}

// Generate switch URLs
// Note: getRelativeLocaleUrl('zh', '/') might return '/' or '/zh/' depending on config.
// My config has prefixDefaultLocale: false, so 'zh' -> '/'
const zhUrl = getRelativeLocaleUrl('zh', pathWithoutLocale);
const enUrl = getRelativeLocaleUrl('en', pathWithoutLocale);

---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-4 h-20 flex items-center justify-between">
    <!-- Logo -->
    <a href={getRelativeLocaleUrl(currentLocale, '/')} class="text-2xl font-bold text-primary-blue flex items-center gap-2">
      <!-- Placeholder Logo Icon -->
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 2L1 12h3v9h6v-6h4v6h6v-9h3L12 2z"/>
      </svg>
      <span>Apex Education</span>
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center gap-6">
      {navItems.map(item => (
        <div class="relative group">
          <a 
            href={getRelativeLocaleUrl(currentLocale, item.href)} 
            class="text-text-main hover:text-primary-blue font-medium py-2 transition-colors"
          >
            {item.label[currentLocale]}
            {item.children && (
              <span class="ml-1 text-xs">▼</span>
            )}
          </a>
          
          {/* Dropdown */}
          {item.children && (
            <div class="absolute left-0 top-full pt-2 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform translate-y-2 group-hover:translate-y-0">
              <div class="bg-white rounded-lg shadow-lg border border-gray-100 overflow-hidden">
                {item.children.map(child => (
                  <a 
                    href={getRelativeLocaleUrl(currentLocale, child.href)}
                    class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary-blue border-b border-gray-50 last:border-0"
                  >
                    {child.label[currentLocale]}
                  </a>
                ))}
              </div>
            </div>
          )}
        </div>
      ))}
    </nav>

    <!-- Language Switcher & Mobile Menu Button -->
    <div class="flex items-center gap-4">
      <div class="flex items-center text-sm font-medium border border-gray-200 rounded-md overflow-hidden">
        <a 
          href={zhUrl} 
          class={`px-3 py-1 ${currentLocale === 'zh' ? 'bg-primary-blue text-white' : 'bg-white text-gray-600 hover:bg-gray-50'}`}
        >
          中
        </a>
        <a 
          href={enUrl} 
          class={`px-3 py-1 ${currentLocale === 'en' ? 'bg-primary-blue text-white' : 'bg-white text-gray-600 hover:bg-gray-50'}`}
        >
          EN
        </a>
      </div>

      <!-- Mobile Menu Button (Hamburger) -->
      <button id="mobile-menu-btn" class="md:hidden text-gray-600 hover:text-primary-blue focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu Overlay -->
  <div id="mobile-menu" class="fixed inset-0 bg-black/50 z-40 hidden md:hidden">
    <div class="absolute right-0 top-0 h-full w-64 bg-white shadow-xl p-6 transform transition-transform translate-x-full" id="mobile-menu-panel">
      <div class="flex justify-end mb-6">
        <button id="close-menu-btn" class="text-gray-500 hover:text-gray-800">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <nav class="flex flex-col gap-4">
        {navItems.map(item => (
          <div>
            <a 
              href={getRelativeLocaleUrl(currentLocale, item.href)} 
              class="block text-lg font-medium text-text-main hover:text-primary-blue"
            >
              {item.label[currentLocale]}
            </a>
            {item.children && (
              <div class="pl-4 mt-2 flex flex-col gap-2 border-l-2 border-gray-100">
                {item.children.map(child => (
                  <a 
                    href={getRelativeLocaleUrl(currentLocale, child.href)}
                    class="text-sm text-gray-600 hover:text-primary-blue"
                  >
                    {child.label[currentLocale]}
                  </a>
                ))}
              </div>
            )}
          </div>
        ))}
      </nav>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const closeBtn = document.getElementById('close-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobilePanel = document.getElementById('mobile-menu-panel');

  function toggleMenu() {
    const isHidden = mobileMenu?.classList.contains('hidden');
    if (isHidden) {
      mobileMenu?.classList.remove('hidden');
      // Small delay to allow display:block to apply before transition
      setTimeout(() => {
        mobilePanel?.classList.remove('translate-x-full');
      }, 10);
    } else {
      mobilePanel?.classList.add('translate-x-full');
      setTimeout(() => {
        mobileMenu?.classList.add('hidden');
      }, 300);
    }
  }

  menuBtn?.addEventListener('click', toggleMenu);
  closeBtn?.addEventListener('click', toggleMenu);
  mobileMenu?.addEventListener('click', (e) => {
    if (e.target === mobileMenu) toggleMenu();
  });
</script>
