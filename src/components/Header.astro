---
import { navItems } from '../data/navigation';
import { getRelativeLocaleUrl } from 'astro:i18n';
import type { Locale } from '../data/types';

const currentLocale = (Astro.currentLocale || 'zh') as Locale;
const currentPath = Astro.url.pathname;

// Helper to get path without locale
let pathWithoutLocale = currentPath;
if (currentLocale === 'en' && currentPath.startsWith('/en')) {
  pathWithoutLocale = currentPath.replace(/^\/en/, '') || '/';
} else if (currentLocale === 'zh' && currentPath === '/') {
    pathWithoutLocale = '/';
}

// Generate switch URLs
// Note: getRelativeLocaleUrl('zh', '/') might return '/' or '/zh/' depending on config.
// My config has prefixDefaultLocale: false, so 'zh' -> '/'
const zhUrl = getRelativeLocaleUrl('zh', pathWithoutLocale);
const enUrl = getRelativeLocaleUrl('en', pathWithoutLocale);

---

<header id="main-header" class="fixed w-full top-0 z-50 transition-all duration-300 bg-transparent text-white">
  <div class="container mx-auto px-4 h-20 flex items-center justify-between">
    <!-- Logo -->
    <a href={getRelativeLocaleUrl(currentLocale, '/')} class="flex items-center group">
      <img 
        src="/images/logo_light.png" 
        alt="Apex Education" 
        class="h-16 w-auto transition-opacity duration-300 group-hover:opacity-80 header-logo"
      />
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center gap-6">
      {navItems.map(item => {
        const isStatic = item.href === '#';
        const linkHref = isStatic ? '#' : getRelativeLocaleUrl(currentLocale, item.href);
        
        return (
        <div class="relative group">
          <a 
            href={linkHref} 
            class={`header-nav-link font-medium py-2 transition-colors flex items-center gap-1 ${isStatic ? 'cursor-default' : 'hover:text-blue-200'}`}
            onclick={isStatic ? "return false;" : ""}
          >
            {item.label[currentLocale]}
            {item.children && (
              <span class="text-xs">▼</span>
            )}
          </a>
          
          {/* Dropdown */}
          {item.children && (
            <div class="absolute left-0 top-full pt-2 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform translate-y-2 group-hover:translate-y-0">
              <div class="bg-white rounded-lg shadow-lg border border-gray-100 overflow-hidden">
                {item.children.map(child => (
                  <a 
                    href={getRelativeLocaleUrl(currentLocale, child.href)}
                    class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary-blue border-b border-gray-50 last:border-0"
                  >
                    {child.label[currentLocale]}
                  </a>
                ))}
              </div>
            </div>
          )}
        </div>
      )})}
    </nav>

    <!-- Language Switcher & Mobile Menu Button -->
    <div class="flex items-center gap-4">
      <div class="flex items-center text-sm font-medium border border-white/30 rounded-md overflow-hidden header-lang-switcher">
        <a 
          href={zhUrl} 
          class={`px-3 py-1 transition-colors ${currentLocale === 'zh' ? 'bg-primary-blue text-white' : 'bg-transparent text-white hover:bg-white/10'}`}
        >
          中
        </a>
        <a 
          href={enUrl} 
          class={`px-3 py-1 transition-colors ${currentLocale === 'en' ? 'bg-primary-blue text-white' : 'bg-transparent text-white hover:bg-white/10'}`}
        >
          EN
        </a>
      </div>

      <!-- Mobile Menu Button (Hamburger) -->
      <button id="mobile-menu-btn" class="md:hidden text-white hover:text-blue-200 focus:outline-none header-mobile-btn">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu Overlay -->
  <div id="mobile-menu" class="fixed inset-0 bg-black/50 z-40 hidden md:hidden">
    <div class="absolute right-0 top-0 h-full w-64 bg-white shadow-xl p-6 transform transition-transform translate-x-full" id="mobile-menu-panel">
      <div class="flex justify-end mb-6">
        <button id="close-menu-btn" class="text-gray-500 hover:text-gray-800">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <nav class="flex flex-col gap-4">
        {navItems.map(item => {
          const isStatic = item.href === '#';
          const linkHref = isStatic ? '#' : getRelativeLocaleUrl(currentLocale, item.href);
          return (
          <div>
            <a 
              href={linkHref} 
              class={`block text-lg font-medium text-primary-blue hover:text-blue-700 ${isStatic ? 'cursor-default' : ''}`}
              onclick={isStatic ? "return false;" : ""}
            >
              {item.label[currentLocale]}
            </a>
            {item.children && (
              <div class="pl-4 mt-2 flex flex-col gap-2 border-l-2 border-gray-100">
                {item.children.map(child => (
                  <a 
                    href={getRelativeLocaleUrl(currentLocale, child.href)}
                    class="text-sm text-gray-600 hover:text-primary-blue"
                  >
                    {child.label[currentLocale]}
                  </a>
                ))}
              </div>
            )}
          </div>
        )})}
      </nav>
    </div>
  </div>
</header>

<script>
  const header = document.getElementById('main-header');
  const logo = document.querySelector('.header-logo') as HTMLImageElement;
  const navLinks = document.querySelectorAll('.header-nav-link');
  const langSwitcher = document.querySelector('.header-lang-switcher');
  const mobileBtn = document.querySelector('.header-mobile-btn');
  const mobileBtnIcon = mobileBtn?.querySelector('svg'); // Get the SVG inside the button

  const menuBtn = document.getElementById('mobile-menu-btn');
  const closeBtn = document.getElementById('close-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobilePanel = document.getElementById('mobile-menu-panel');

  function updateHeaderStyle() {
    if (window.scrollY > 50) {
      // Scrolled State (White BG)
      header?.classList.remove('bg-transparent', 'text-white');
      header?.classList.add('bg-white', 'text-text-main', 'shadow-sm');
      
      // Switch to dark logo for white background
      if (logo) logo.src = '/images/logo_dark.png';

      navLinks.forEach(link => {
        link.classList.remove('hover:text-blue-200');
        link.classList.add('hover:text-primary-blue');
      });

      langSwitcher?.classList.remove('border-white/30');
      langSwitcher?.classList.add('border-gray-200');
      
      // Update lang switcher links text color for non-active items
      const langLinks = langSwitcher?.querySelectorAll('a');
      langLinks?.forEach(link => {
        if (!link.classList.contains('bg-primary-blue')) {
           link.classList.remove('text-white', 'hover:bg-white/10');
           link.classList.add('text-gray-600', 'hover:bg-gray-50');
        }
      });

      mobileBtn?.classList.remove('text-white', 'hover:text-blue-200');
      mobileBtn?.classList.add('text-gray-600', 'hover:text-primary-blue');

    } else {
      // Top State (Transparent BG)
      header?.classList.add('bg-transparent', 'text-white');
      header?.classList.remove('bg-white', 'text-text-main', 'shadow-sm');

      // Switch to light logo for transparent background
      if (logo) logo.src = '/images/logo_light.png';

      navLinks.forEach(link => {
        link.classList.add('hover:text-blue-200');
        link.classList.remove('hover:text-primary-blue');
      });

      langSwitcher?.classList.add('border-white/30');
      langSwitcher?.classList.remove('border-gray-200');

      const langLinks = langSwitcher?.querySelectorAll('a');
      langLinks?.forEach(link => {
        if (!link.classList.contains('bg-primary-blue')) {
           link.classList.add('text-white', 'hover:bg-white/10');
           link.classList.remove('text-gray-600', 'hover:bg-gray-50');
        }
      });

      mobileBtn?.classList.add('text-white', 'hover:text-blue-200');
      mobileBtn?.classList.remove('text-gray-600', 'hover:text-primary-blue');
    }
  }

  window.addEventListener('scroll', updateHeaderStyle);
  // Initial check
  updateHeaderStyle();

  function toggleMenu() {
    const isHidden = mobileMenu?.classList.contains('hidden');
    if (isHidden) {
      mobileMenu?.classList.remove('hidden');
      setTimeout(() => {
        mobilePanel?.classList.remove('translate-x-full');
      }, 10);
    } else {
      mobilePanel?.classList.add('translate-x-full');
      setTimeout(() => {
        mobileMenu?.classList.add('hidden');
      }, 300);
    }
  }

  menuBtn?.addEventListener('click', toggleMenu);
  closeBtn?.addEventListener('click', toggleMenu);
  mobileMenu?.addEventListener('click', (e) => {
    if (e.target === mobileMenu) toggleMenu();
  });
</script>
